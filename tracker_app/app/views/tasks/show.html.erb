<div class="w-full">
  <div class="flex flex-row justify-between items-center">
    <div>
      <h1 class="text-3xl font-medium"><%= @task.title %></h1>
    </div>
  </div>
  <p class="text-slate-500"><%== simple_format @task.description %></p>

  <div id="tasks" class="my-5">
    <%= link_to 'Edit this task', edit_task_path(@task), class: "mt-2 rounded-lg py-2 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this task', task_path(@task), method: :delete, class: "mt-2 rounded-lg py-2 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to tasks', tasks_path, class: "ml-2 rounded-lg py-2 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
