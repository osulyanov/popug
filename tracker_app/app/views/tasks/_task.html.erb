<div id="<%= dom_id task %>" class="flex justify-between items-center border-b border-slate-200 py-3 px-2 border-l-4 border-l-transparent <%= task.status_done? ? '' : taskToDo %>">

  <div class="inline-flex items-center space-x-2">
    <div class="w-6 h-6 text-slate-500">
      <% if task.status_done? %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
      <% else %>
        <%= button_to complete_task_path(task), method: :put, class: "w-6 h-6 text-slate-500 hover:text-slate-600 hover:cursor-pointer" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
      <% end %>
    </div>

    <div class="<%= task.status_done? ? taskDoneTitle : '' %>"><%= link_to task.title, task %></div>
  </div>

  <div>
    <div class="text-slate-500 inline-flex mr-2 rounded-lg py-0.5 px-2 bg-gray-100 font-small text-sm">
      <%= task.assignee&.name || 'unassigned' %>
    </div>
    <%= link_to edit_task_path(task), class: "w-4 h-4 text-slate-500 inline-flex hover:text-slate-700 hover:cursor-pointer" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-slate-500 hover:text-slate-700 hover:cursor-pointer">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
      </svg>
    <% end %>
    <div class="inline-block ml-2">
      <%= button_to task_path(task), method: :delete, class: "w-4 h-4 text-slate-500 hover:text-slate-700 hover:cursor-pointer" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 text-slate-500 hover:text-slate-700 hover:cursor-pointer">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
